<script>
  (function() {
    class SocialWall{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.activePopup = null;
      }

      connectedCallback() {
        this.setupHotspots();
        this.setupClickOutside();
      }

      setupHotspots() {
        const hotspots = this.querySelectorAll('.ai-social-wall-hotspot-{{ ai_gen_id }}');
        
        hotspots.forEach((hotspot) => {
          const button = hotspot.querySelector('.ai-social-wall-hotspot-button-{{ ai_gen_id }}');
          const popup = hotspot.querySelector('.ai-social-wall-popup-{{ ai_gen_id }}');
          const closeBtn = popup.querySelector('.ai-social-wall-popup-close-{{ ai_gen_id }}');

          button.addEventListener('click', (e) => {
            e.stopPropagation();
            
            if (this.activePopup && this.activePopup !== popup) {
              this.activePopup.classList.remove('active');
            }

            const isActive = popup.classList.contains('active');
            popup.classList.toggle('active');
            this.activePopup = isActive ? null : popup;
          });

          closeBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            popup.classList.remove('active');
            this.activePopup = null;
          });
        });
      }

      setupClickOutside() {
        document.addEventListener('click', (e) => {
          if (this.activePopup && !e.target.closest('.ai-social-wall-hotspot-{{ ai_gen_id }}')) {
            this.activePopup.classList.remove('active');
            this.activePopup = null;
          }
        });
      }
    }

    customElements.define('social-wall-{{ ai_gen_id }}', SocialWall{{ ai_gen_id }});
  })();
</script>

