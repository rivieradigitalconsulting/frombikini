{% doc %}
  @prompt
    ciao, ho bisogno di una sezione che si compili di 12 elementi, che possono essere quadrati o circolari. Posso decidere la distanza del modulo ai lati e sopra e sotto come Margine. Posso decidere distanza tra gli elementi. Posso decidere disposizione a desktop e mobile (desktop da 2 fino a 4 per riga, mobile da 2 fino a 3 per riga) Passiamo alle caratteristiche degli elementi. Testo centrale, posso decidere per ogni dispositivo font e dimensioni del testo. Poi sotto all'elemento un titolo e un sottotitolo di cui posso scegliere per ognuno font e dimensioni, giustifica e spaziatura tra i due elementi. L'elemento deve essere compilato con un immagine., quando Ã¨ selezionato 2 su mobile sta a 3
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-grid-container-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding-top: {{ block.settings.margin_top }}px;
    padding-bottom: {{ block.settings.margin_bottom }}px;
    padding-left: {{ block.settings.margin_left }}px;
    padding-right: {{ block.settings.margin_right }}px;
  }

  .ai-grid-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.gap }}px;
    {% if block.settings.columns_mobile == '2' %}
      grid-template-columns: repeat(2, 1fr);
    {% else %}
      grid-template-columns: repeat(3, 1fr);
    {% endif %}
  }

  @media screen and (min-width: 750px) {
    .ai-grid-{{ ai_gen_id }} {
      {% if block.settings.columns_desktop == '2' %}
        grid-template-columns: repeat(2, 1fr);
      {% elsif block.settings.columns_desktop == '3' %}
        grid-template-columns: repeat(3, 1fr);
      {% else %}
        grid-template-columns: repeat(4, 1fr);
      {% endif %}
    }
  }

  .ai-grid-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: {{ block.settings.text_align }};
    gap: {{ block.settings.title_subtitle_gap }}px;
  }

  .ai-grid-item-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
    {% if block.settings.shape == 'circle' %}
      border-radius: 50%;
    {% else %}
      border-radius: 0;
    {% endif %}
  }

  .ai-grid-item-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-grid-item-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-grid-item-image-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .ai-grid-item-overlay-text-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: {{ block.settings.overlay_text_color }};
    font-family: {{ block.settings.overlay_font.family }}, {{ block.settings.overlay_font.fallback_families }};
    font-weight: {{ block.settings.overlay_font.weight }};
    font-style: {{ block.settings.overlay_font.style }};
    font-size: {{ block.settings.overlay_text_size_mobile }}px;
    text-align: center;
    width: 90%;
  }

  @media screen and (min-width: 750px) {
    .ai-grid-item-overlay-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.overlay_text_size_desktop }}px;
    }
  }

  .ai-grid-item-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
    font-style: {{ block.settings.title_font.style }};
    font-size: {{ block.settings.title_size_mobile }}px;
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .ai-grid-item-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size_desktop }}px;
    }
  }

  .ai-grid-item-subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.subtitle_color }};
    font-family: {{ block.settings.subtitle_font.family }}, {{ block.settings.subtitle_font.fallback_families }};
    font-weight: {{ block.settings.subtitle_font.weight }};
    font-style: {{ block.settings.subtitle_font.style }};
    font-size: {{ block.settings.subtitle_size_mobile }}px;
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .ai-grid-item-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size_desktop }}px;
    }
  }
{% endstyle %}

<grid-elements-{{ ai_gen_id }} class="ai-grid-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-grid-{{ ai_gen_id }}">
    {% for i in (1..12) %}
      {% liquid
        assign image_key = 'image_' | append: i
        assign overlay_text_key = 'overlay_text_' | append: i
        assign title_key = 'title_' | append: i
        assign subtitle_key = 'subtitle_' | append: i

        assign image = block.settings[image_key]
        assign overlay_text = block.settings[overlay_text_key]
        assign title = block.settings[title_key]
        assign subtitle = block.settings[subtitle_key]
      %}

      <div class="ai-grid-item-{{ ai_gen_id }}">
        <div class="ai-grid-item-image-wrapper-{{ ai_gen_id }}">
          {% if image %}
            <img
              src="{{ image | image_url: width: 800 }}"
              alt="{{ image.alt | escape }}"
              loading="lazy"
              width="800"
              height="800"
              class="ai-grid-item-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-grid-item-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}

          {% if overlay_text != blank %}
            <div class="ai-grid-item-overlay-text-{{ ai_gen_id }}">
              {{ overlay_text }}
            </div>
          {% endif %}
        </div>

        {% if title != blank %}
          <h3 class="ai-grid-item-title-{{ ai_gen_id }}">{{ title }}</h3>
        {% endif %}

        {% if subtitle != blank %}
          <p class="ai-grid-item-subtitle-{{ ai_gen_id }}">{{ subtitle }}</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</grid-elements-{{ ai_gen_id }}>

<script>
  (function() {
    class GridElements{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('grid-elements-{{ ai_gen_id }}', GridElements{{ ai_gen_id }});
  })();
</script>

