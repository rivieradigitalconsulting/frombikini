{% doc %}
  @prompt
    white space a cui posso assegnare un colore di background e decidere alteza in pixel, divisa tra desktop e mobile.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-spacer-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-spacer-{{ ai_gen_id }} {
      height: {{ block.settings.height_mobile }}px;
    }
  }

  @media screen and (min-width: 750px) {
    .ai-spacer-{{ ai_gen_id }} {
      height: {{ block.settings.height_desktop }}px;
    }
  }
{% endstyle %}

<div class="ai-spacer-{{ ai_gen_id }}" {{ block.shopify_attributes }}></div>

{% schema %}
{
  "name": "Spazio bianco",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Altezza"
    },
    {
      "type": "range",
      "id": "height_desktop",
      "min": 0,
      "max": 500,
      "step": 10,
      "unit": "px",
      "label": "Altezza desktop",
      "default": 100
    },
    {
      "type": "range",
      "id": "height_mobile",
      "min": 0,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Altezza mobile",
      "default": 50
    },
    {
      "type": "header",
      "content": "Stile"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Colore di sfondo",
      "default": "#f7f4ed"
    }
  ],
  "presets": [
    {
      "name": "Spazio bianco"
    }
  ]
}
{% endschema %}
