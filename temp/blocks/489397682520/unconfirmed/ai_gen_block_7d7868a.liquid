{% doc %}
  @prompt
    sezione a griglia in cui posso decidere distanza tra elementi della griglia, quadrati o circolari, Portiamo questi elementi a 50. Di questi elementi toglimi il contorno, si deve vedere solo immagine che deve entrare nel contenitore coprendolo tutto. Dammi anche a mobile la possibilità di visualizzare fino a 5 colonne. Poi colore di background generale. Possibilità di inserire un testo al centro del blocco, decidere font desktop e mobil e font. Poi possibilità di inserire titolo e sottotitolo sotto il blocco, decidere dimensioni per ogni device e spaziatur tra i due
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-grid-container-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
  }

  .ai-grid-wrapper-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-grid-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-grid-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_subtitle_spacing }}px;
  }

  .ai-grid-subtitle-{{ ai_gen_id }} {
    font-family: {{ block.settings.subtitle_font.family }}, {{ block.settings.subtitle_font.fallback_families }};
    font-weight: {{ block.settings.subtitle_font.weight }};
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-grid-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.grid_gap }}px;
    position: relative;
  }

  .ai-grid-center-text-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
    text-align: center;
    pointer-events: none;
    color: {{ block.settings.center_text_color }};
    font-family: {{ block.settings.center_text_font.family }}, {{ block.settings.center_text_font.fallback_families }};
    font-weight: {{ block.settings.center_text_font.weight }};
    max-width: 90%;
  }

  .ai-grid-item-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    {% if block.settings.item_shape == 'circle' %}
      border-radius: 50%;
    {% else %}
      border-radius: {{ block.settings.item_border_radius }}px;
    {% endif %}
  }

  .ai-grid-item-content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: block;
  }

  .ai-grid-item-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-grid-item-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-grid-item-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  @media screen and (min-width: 750px) {
    .ai-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    }

    .ai-grid-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size_desktop }}px;
    }

    .ai-grid-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size_desktop }}px;
    }

    .ai-grid-center-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.center_text_size_desktop }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-grid-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size_mobile }}px;
    }

    .ai-grid-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size_mobile }}px;
    }

    .ai-grid-center-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.center_text_size_mobile }}px;
    }
  }
{% endstyle %}

<grid-section-{{ ai_gen_id }}
  class="ai-grid-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-grid-wrapper-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-grid-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-grid-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="ai-grid-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-grid-{{ ai_gen_id }}" style="position: relative;">
      {% if block.settings.center_text != blank %}
        <div class="ai-grid-center-text-{{ ai_gen_id }}">
          {{ block.settings.center_text }}
        </div>
      {% endif %}

      {% for i in (1..50) %}
        {% liquid
          assign image_key = 'item_' | append: i | append: '_image'
          assign link_key = 'item_' | append: i | append: '_link'
          
          assign item_image = block.settings[image_key]
          assign item_link = block.settings[link_key]
        %}

        {% if item_image != blank %}
          <div class="ai-grid-item-{{ ai_gen_id }}">
            {% if item_link != blank %}
              <a href="{{ item_link }}" class="ai-grid-item-content-{{ ai_gen_id }}">
            {% else %}
              <div class="ai-grid-item-content-{{ ai_gen_id }}">
            {% endif %}
              
              <img
                src="{{ item_image | image_url: width: 600 }}"
                alt="{{ item_image.alt | escape }}"
                loading="lazy"
                width="600"
                height="600"
                class="ai-grid-item-image-{{ ai_gen_id }}"
              >

            {% if item_link != blank %}
              </a>
            {% else %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</grid-section-{{ ai_gen_id }}>

<script>
  (function() {
    class GridSection{{ai_gen_id}} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupGrid();
      }

      setupGrid() {
        const items = this.querySelectorAll('.ai-grid-item-{{ ai_gen_id }}');
        items.forEach((item, index) => {
          item.style.animationDelay = `${index * 0.02}s`;
        });
      }
    }

    customElements.define('grid-section-{{ ai_gen_id }}', GridSection{{ai_gen_id}});
  })();
</script>

