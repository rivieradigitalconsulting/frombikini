{% doc %}
  @prompt
    sezione a griglia in cui posso decidere distanza tra elementi della griglia, quadrati o circolari
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-grid-container-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
  }

  .ai-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: {{ block.settings.grid_gap }}px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-grid-item-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    {% if block.settings.item_shape == 'circle' %}
      border-radius: 50%;
    {% else %}
      border-radius: {{ block.settings.item_border_radius }}px;
    {% endif %}
    background-color: {{ block.settings.item_background_color }};
    transition: transform 0.3s ease;
  }

  .ai-grid-item-{{ ai_gen_id }}:hover {
    transform: scale(1.05);
  }

  .ai-grid-item-content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px;
    text-align: center;
  }

  .ai-grid-item-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-grid-item-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-grid-item-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-grid-item-text-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 15px;
    background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
    color: {{ block.settings.text_color }};
  }

  .ai-grid-item-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0 0 5px;
  }

  .ai-grid-item-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    margin: 0;
    opacity: 0.9;
  }

  @media screen and (min-width: 750px) {
    .ai-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
  }
{% endstyle %}

<grid-section-{{ ai_gen_id }}
  class="ai-grid-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-grid-{{ ai_gen_id }}">
    {% for i in (1..12) %}
      {% liquid
        assign image_key = 'item_' | append: i | append: '_image'
        assign title_key = 'item_' | append: i | append: '_title'
        assign description_key = 'item_' | append: i | append: '_description'
        assign link_key = 'item_' | append: i | append: '_link'
        
        assign item_image = block.settings[image_key]
        assign item_title = block.settings[title_key]
        assign item_description = block.settings[description_key]
        assign item_link = block.settings[link_key]
      %}

      {% if item_image != blank or item_title != blank %}
        <div class="ai-grid-item-{{ ai_gen_id }}">
          {% if item_link != blank %}
            <a href="{{ item_link }}" class="ai-grid-item-content-{{ ai_gen_id }}">
          {% else %}
            <div class="ai-grid-item-content-{{ ai_gen_id }}">
          {% endif %}
            
            {% if item_image %}
              <img
                src="{{ item_image | image_url: width: 600 }}"
                alt="{{ item_image.alt | escape }}"
                loading="lazy"
                width="600"
                height="600"
                class="ai-grid-item-image-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="ai-grid-item-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}

            {% if item_title != blank or item_description != blank %}
              <div class="ai-grid-item-text-{{ ai_gen_id }}">
                {% if item_title != blank %}
                  <h3 class="ai-grid-item-title-{{ ai_gen_id }}">{{ item_title }}</h3>
                {% endif %}
                {% if item_description != blank %}
                  <p class="ai-grid-item-description-{{ ai_gen_id }}">{{ item_description }}</p>
                {% endif %}
              </div>
            {% endif %}

          {% if item_link != blank %}
            </a>
          {% else %}
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</grid-section-{{ ai_gen_id }}>

<script>
  (function() {
    class GridSection{{ai_gen_id}} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupGrid();
      }

      setupGrid() {
        const items = this.querySelectorAll('.ai-grid-item-{{ ai_gen_id }}');
        items.forEach((item, index) => {
          item.style.animationDelay = `${index * 0.05}s`;
        });
      }
    }

    customElements.define('grid-section-{{ ai_gen_id }}', GridSection{{ai_gen_id}});
  })();
</script>

